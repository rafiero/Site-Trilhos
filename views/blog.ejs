<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/homenavbar.ejs'); %>
    <div class="container containerBlog">
        <br>
        <h1>Blog</h1>
        <br>
        <div class="row" id="blog" >
            <% articles.forEach(article => { %>
                <div class="card postagem">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="<%= article.slug %>" class="btn btn-primary">Ler Artigo</a>
                    </div>
                </div>
                <br>
            <% }) %>
        </div>        
                
        <div class="row">
            <div class="container">
                <a style="float: right; margin: 0px 150px;" href="/articles/page/2"><h5>proxima</h5></a>
            </div>            
        </div>
        
    </div>    
    <br><br><br>
</body>
